#!/bin/bash

if exists lsb_release; then
    lsb_release ${1:--ds} | sed -e 's/^"\?[[:space:]]*\|[[:space:]]*"\?$//g'
elif [ -r /etc/redhat-release ]; then
    cat /etc/redhat-release
elif [ -r /etc/os-release ]; then
    cat /etc/os-release
elif [ -r /etc/issue ]; then
    cat /etc/issue
else
    uname -r
fi
